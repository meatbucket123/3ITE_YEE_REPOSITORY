@model IEnumerable<Student>;


@{
    string domain = "@ust.edu.ph";
}
<table class="table table-dark">

    <tr>
        <th class="d-flex justify-content-center row-cols-1">Students</th>
    </tr>

    <tr>
        <td class="bg-warning border-1 border-light">Id</td>
        <td class="bg-warning border-1 border-light">Name</td>
        <td class="bg-warning border-1 border-light">Email</td>
        <td class="bg-warning border-1 border-light">Course</td>
        <td class="bg-warning border-1 border-light">Admission Date</td>
        <td class="bg-warning border-1 border-light"></td>
        <td class="bg-warning border-1 border-light"></td>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.FirstName.Substring(0,1).Trim().ToLower()@student.LastName.Replace(" ","").ToLower()@domain </td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id"><button class="bg-primary text-light border-1 rounded-3">Show Details</button></a></td>
            <td><a asp-action="EditDetail" asp-controller="Student" asp-route-id="@student.Id"><button class="bg-warning text-light border-1 rounded-3">Edit Details</button></a></td>
            <td><a asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id"><button class="bg-danger text-light border-1 rounded-3">Delete</button></a></td>
        </tr>

    }
</table>

<a asp-action="AddStudent" asp-controller="Student"><button class="bg-danger text-light border-1 rounded-3">Add Student</button></a>