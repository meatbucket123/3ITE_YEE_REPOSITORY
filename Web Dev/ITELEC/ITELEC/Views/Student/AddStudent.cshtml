@model Student;

<h1>Add Student</h1>
<form asp-action="AddStudent" method="post">
	<div class="form-group">
		<label asp-for="FirstName">First Name</label>
		<input asp-for="FirstName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="LastName">Last Name</label>
		<input asp-for="LastName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Email">Email</label>
		<input asp-for="Email" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Course">Course</label>
		<select asp-for="Course" asp-items="Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
	</div>
	<div class="form-group">
		<label asp-for="AdmissionDate">Date Enrolled</label>
		<input asp-for="AdmissionDate" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
	<a asp-action="Index">Cancel</a>
</form>