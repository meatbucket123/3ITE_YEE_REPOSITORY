@model IEnumerable<Student>;


@{
    string domain = "@ust.edu.ph";
}
<table class="table table-dark">

    <tr>
        <th colspan="7">Students</th>
    </tr>

    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Email</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td></td>
        <td></td>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.FirstName.Substring(0,1).Trim().ToLower()@student.LastName.Replace(" ","").ToLower()@domain </td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a asp-action="EditDetail" asp-controller="Student" asp-route-id="@student.Id">Edit Details</a></td>
        </tr>

    }
</table>

<button><a asp-action="AddStudent" asp-controller="Student">Add Student</a></button>